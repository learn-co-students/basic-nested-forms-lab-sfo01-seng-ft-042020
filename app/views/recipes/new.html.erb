<h2>New Recipe</h2>


<%= form_for @recipe do |f| %>
<%= f.label :recipe_title %>
<%= f.text_field :title %>
<br />
<br />

<%= f.fields_for :ingredients do |ff| %>
<%= ff.label :quantity %>
<%= ff.text_field :quantity %>
<%= ff.label :ingredient_name %>
<%= ff.text_field :name %><br /><br />



<% end %>
<%= f.submit "Create Recipe" %>
<% end %>